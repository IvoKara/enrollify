{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "resources/js/*"
      ],
      "ziggy-js": [
        "./vendor/tightenco/ziggy"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "@types/node"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./public/build/assets",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.vue",
    "components.d.ts",
    "auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    ".pnpm-store",
    "vendor"
  ]
}
