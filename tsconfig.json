{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "@types/node",
        ],
        "baseUrl": ".",
        "outDir": "./public/build/assets",
        "paths": {
            "@/*": [
                "resources/js/*"
            ],
            "ziggy-js": [
                "./vendor/tightenco/ziggy"
            ]
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",
        "components.d.ts"
    ],
    "exclude": [
        "node_modules",
        "public",
        ".pnpm-store",
        "vendor"
    ]
}